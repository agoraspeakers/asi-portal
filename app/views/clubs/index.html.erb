<p id="notice"><%= notice %></p>

<h1>Clubs</h1>

<table class="table table-striped table-bordered table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Status</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @clubs.each do |club| %>
      <tr>
        <td><%= link_to club.name, club %></td>
        <td><%= club.status %></td>
        <td>
          <%= link_to 'Confirm', confirm_club_path(club), method: :put if can? :confirm, club %>
          <%= link_to 'Join', join_club_user_url(club, current_user), method: :post if can? :join, club %>
          <%= link_to 'Edit', edit_club_path(club) if can? :update, club %>
          <%= link_to 'Destroy', club, method: :delete, data: { confirm: 'Are you sure?' } if can? :destroy, club %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

